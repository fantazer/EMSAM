@import 'rupture'
@import "variable/_function.styl"
@import "variable/_ie.styl"
@import "icon/sprite.css"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/_elements.styl"
@import "variable/_constant.styl"
@import "variable/_grid.styl"

rupture.scale = 0 480px 768px 992px 1200px
rupture.scale-names = 'xs' 'sm' 'md' 'lg'

// Grid breakpoints
$breakpoints = {
	'xs' :  0,
	'sm' : 480px,
	'md' : 768px,
	'lg' : 992px,
	'xl' : 1200px
}

// Number of columns
$columns = 12

init($breakpoints, $columns)

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.2
	letter-spacing 0.01em
	
.main-cont
	center(1200px,10px)

.page
	display flex
	min-height 100vh

.content
	flex-grow: 1
	flex-shrink: 1
	flex-basis: 0%
	width: calc(100% - 385px - 95px)

.main-page
	width: 100%

.main-page__first-section
	f()

.main-page__first-section-about
	width: 50%

//.main-page__first-section-slider
	//height: 100vh
.main-page__first-section-info
	width: 50%
	.item-block
		height: 50vh

.main-page__first-section-slider__el
	position: relative
	bg-full()
	width: 100%
	height: 100vh

.filter
	width: 100%
	height: 100%
	position: absolute
	top 0
	left: 0
	background: rgba(0, 0, 0, 0.15)

.item-block
	position: relative
	bg-full()

.item-block__name
	font-size: 24px
	color white
	margin-bottom: 10px
	font-family Oswald

.item-block__cost
	opacity 0.7
	color #ffffff
	@extend .type--main

.item-block__info
	z-index 5
	position: absolute
	top 10%
	left: 8%

.line-title-wrap
	text-align: center
	flex(mid)

.line-title
	font-family "Marck Script"
	font-size 18px
	font-weight 400
	color $red
	margin: 0 10px
.line-title-el
	width: 10px
	height: 1px
	background: $red

.item-slider__nav
	f()
	position: absolute
	right: 8%
	bottom: 10%

.item-slider
	flex(mid)
	height: 50vh
	position: relative
	.item-slider__nav-prev,
	.item-slider__nav-next
		round()
		flex(mid)
		cp()
		tr(all)
		border 1px solid $gray
		size 40px
		&:hover
			border 1px solid #614f4a
			.slider-control
				fill  #614f4a
		.slider-control
			tr(all)
			size 20px
			fill  $gray
	.line-title-wrap
		position: absolute
		top 10%
		width: 100%

.item-slider__nav-prev
	margin-right: 10px

.item-slider__link
	@extend .type--main
	position: absolute
	left: 8%
	bottom 10%
	color $link-color

.item-slider__wrap
	width: 60%

.item-slider_title
	@extend .type--lg
	font-weight 300
	text-align: center
	margin-bottom: 20px

.item-slider_text
	@extend .type--main
	color #463e3c
	text-align: center
//.item-block

.main-page__second-section
	f()
	.item-slider
		width: 50%
	.item-block
		width: 50%

.restorans
	bg-full()
	flex(mid)
	padding: 80px 0
.restorans-wrap
	width: 60%
	padding: 20px
	background: white

.restorans-cont
	border 1px solid #cebbb4
	padding: 25px
	padding-bottom: 50px

.restorans-title
	margin-bottom: 25px

.restorans-row
	flex(mid)
	.restorans-btn
		&:nth-child(1)
			margin-right: 20px

@import "../module/**/*"
