@import 'rupture'
@import "variable/_function.styl"
@import "variable/_ie.styl"
@import "icon/sprite.css"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/_elements.styl"
@import "variable/_constant.styl"
@import "variable/_grid.styl"

rupture.scale = 0 480px 768px 992px 1200px
rupture.scale-names = 'xs' 'sm' 'md' 'lg'

// Grid breakpoints
$breakpoints = {
	'xs' :  0,
	'sm' : 480px,
	'md' : 768px,
	'lg' : 992px,
	'xl' : 1200px
}

// Number of columns
$columns = 12

init($breakpoints, $columns)

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.2
	letter-spacing 0.01em
	width: 100%

.main-cont
	center(1200px,10px)

.page
	display flex
	min-height 100vh

.content
	flex-grow: 1
	flex-shrink: 1
	flex-basis: 0%
	width: calc(100% - 385px - 95px)
	max-width 1440px
	overflow hidden
	position: relative

.main-page
	width: 100%

.main-page__first-section
	f()


.main-page__first-section-about
	width: 50%

//.main-page__first-section-slider
	//height: 100vh
.main-page__first-section-info
	width: 50%
	.item-block
		height: 50vh

.main-page__first-section-slider__el
	position: relative
	bg-full()
	width: 100%
	height: 100vh

.filter
	width: 100%
	height: 100%
	position: absolute
	top 0
	left: 0
	background: rgba(0, 0, 0, 0.15)

.item-block
	position: relative
	bg-full()

.item-block__name
	font-size: 24px
	color white
	margin-bottom: 10px
	font-family Oswald

.item-block__cost
	opacity 0.7
	color #ffffff
	@extend .type--main

.item-block__info
	z-index 5
	position: absolute
	top 10%
	left: 8%

.line-title-wrap
	text-align: center
	flex(mid)

.line-title
	font-family "Marck Script"
	font-size 18px
	font-weight 400
	color $red
	margin: 0 10px
.line-title-el
	width: 10px
	height: 1px
	background: $red

.item-slider__nav
	f()
	position: absolute
	right: 8%
	bottom: 10%

.item-slider
	flex(mid)
	height: 50vh
	position: relative
	.item-slider__nav-prev,
	.item-slider__nav-next
		round()
		flex(mid)
		cp()
		tr(all)
		border 1px solid $gray
		size 40px
		&:hover
			border 1px solid #614f4a
			.slider-control
				fill  #614f4a
		.slider-control
			tr(all)
			size 20px
			fill  $gray
	.line-title-wrap
		position: absolute
		top 10%
		width: 100%

.item-slider__nav-prev
	margin-right: 10px

.item-slider__link
	@extend .type--main
	position: absolute
	left: 8%
	bottom 10%
	color $link-color

.item-slider__wrap
	width: 60%

.item-slider_title
	@extend .type--lg
	font-weight 300
	text-align: center
	margin-bottom: 20px

.item-slider_text
	@extend .type--main
	color #463e3c
	text-align: center
//.item-block

.main-page__second-section
	f()
	.item-slider
		width: 50%
	.item-block
		width: 50%

.restorans
	bg-full()
	flex(mid)
	padding: 80px 0
.restorans-wrap
	width: 60%
	padding: 20px
	background: white

.restorans-cont
	border 1px solid #cebbb4
	padding: 25px
	padding-bottom: 50px

.restorans-title
	margin-bottom: 25px

.restorans-row
	flex(mid)
	.restorans-btn
		&:nth-child(1)
			margin-right: 20px

.module
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100vh
	//background: rgba(0, 0, 0, 0.62)
	z-index 200
	transform translateX(100%)
.fix-scroll
	position: fixed
	overflow-y:scroll


.module--open
	transform translateX(0%)

.content-filter
	position: absolute
	top 0
	left: 0
	width: 100%
	height: 100%
	background: rgba(0, 0, 0, 0.5)
	z-index 20
	visibility: hidden
	transition all 1s
	opacity 0

.content-filter--open
	visibility: visible
	opacity 1


.toolbar-enter-icon--close
	display: none

.toolbar-enter.get-module--active
	background: $red
	.toolbar-enter-icon--close
		display: block
		.icon
			fill white!important
			size 40px
	.toolbar-enter-icon--open
		display: none

.incr
	f()
	justify-content: space-between
	position relative
	width 100px
.incr__nav
	flex(mid)
	tr(background )
	round()
	size 30px
	border 1px solid #dddddd
	background white
	.icon
		size 12px
		fill #b3b3b3
	&:hover
		cp()
		background-color $green
		border 0
		.icon
			fill white
	&:active
		background-color $red
.incr__val
	flex(mid)
	background white
	position relative
	tr(all)
	color #757575
	font-family Lato
	@extend .type--main
	font-weight 400



@keyframes bounceIn {
	from {
			transform: scale3d(1, 1, 1);
	}

	50% {
			transform: scale3d(1.05, 1.05, 1.05);
	}
	to {
			transform: scale3d(1, 1, 1);
	}
	//
	//from {
  //  opacity: 0;
  //  transform: translate3d(0, -100%, 0);
  //}
	//
  //to {
  //  opacity: 1;
  //  transform: none;
  //}
}

.bounceIn
	animation-name: bounceIn

.animate-basket
	animation: bounceIn 0.3s 2 ease-in-out

.news-wrap
	f()
	align-items: stretch
	fw()

.news-el
	width: calc(100% / 3 + 1px)
	margin-left: -1px
	border:1px solid $gray
	border-top:0
	&:hover
		.news__img-el
			transform scale(1.2)

.news__img
	height: 260px
	overflow: hidden
.news__img-el
	width: 100%
	height: 100%
	transition all 1.5s
	bg-full()

.news__info
	padding: 30px
	padding-bottom: 45px
	height: 100%
	.line-title-wrap
		margin-bottom: 30px

//.news__date

.news__title
	font-family Oswald
	font-size 24px
	font-weight 300
	width: 55%
	margin-bottom: 20px
	color black

.news__text
	@extend .type--main
	font-weight 400
	line-height 1.4
	color #463e3c


//.catalog
.catalog-title
	@extend .type--xl
	text-align: center
	font-family Oswald
	padding: 35px
	font-weight 300

.catalog-wrap
	f()
	fw()
	align-items: stretch

.el
	flex(mid)
	fl()
	cp()
	width: calc(20% + 1px)
	border 1px solid $gray
	padding: 25px
	margin-left: -1px
	margin-top: -1px
	position: relative
	&:hover
		.el__img
			height: 0
		.el__incr
			display: block

.el__img
	//tr(all)
	width: 100%
	height: 100px

.el__img-el
	bg-full()
	width: 100%
	height: 100%
	background-size: contain
	margin-bottom: 20px

.el__title
	font-family Oswald
	font-size 24px
	font-weight 300
	margin-bottom: 20px

.el__text
	text-align: center
	width: 80%
	margin-bottom: 40px

.el__info
	flex(mid)
//.el__weight

.el__devider
	width: 1px
	height: 20px
	background: gray
	margin:0 10px

.el__cost
	color $red

.el__incr
	margin-top: 40px
	display: none

.el--active
	border 0px
	&:before
		content: ''
		position: absolute
		width: 100%
		height: 100%
		top 0
		left: 0
		border 2px solid $green

.el-big
	@extend .el
	flex(between)
	width: calc(40% + 1px)
	padding-bottom: 0
	.el__img
		margin-top: 0

.el-big__content
	flex(mid)
	fl()


.el-big__img
	//tr(all)
	width: 100%
	height: 200px
	margin-top: 20px

.el-big__img-el
	bg-full()
	width: 100%
	height: 100%
	background-size: contain
	margin-bottom: 20px

.el-big__title
	font-family Oswald
	font-size 24px
	font-weight 300
	margin-bottom: 20px

.el-big__text
	text-align: center
	width: 80%
	margin-bottom: 20px

.el-big__info
	flex(mid)
//.el-big__weight

.el-big__devider
	width: 1px
	height: 20px
	background: gray
	margin:0 10px

.el-big__cost
	color $red

.el-big__incr
	margin-top: 20px

.el-big__recom
	margin-bottom: 20px
