.select2-container
	width 100%!important
.select2-selection__arrow
	flex(mid)
	tr(all)
.select2-container--open
	.select2-selection__arrow
		transform rotate(180deg)
.select2-results__option
	padding 10px

.select2-container .select2-selection--single
	height: auto
	padding: 10px
	outline none
	border 1px solid $gray

.select2-container--default .select2-selection--single .select2-selection__arrow
	right: 12px
	top 12px

.select2-dropdown
	border 1px solid $gray

.select2-container--default .select2-results__option--highlighted[aria-selected]
	background: $green

.icon-select-arrow
	fill $green
	size 15px

.pay-type
	flex(between)
	margin-bottom: 5%
.pay-type__el
	width: 30%

.tab
	flex(between)
	margin-bottom: 5%
.tab__el
	width: 50%
	padding: 20px
	cp()
	text-align: center
	background: white
	color $green
	border 1px solid $green
	font-size: 16px

.tab__el--active
	color white
	background: $green
	border 1px solid $green

.tab__cont
	margin-bottom: 5%
	height: auto
	tr(all)
.tab__cont--hide
	display: none

.person
	flex(between)
	margin-bottom: 5%

.module-order
	textarea
		width: 100%
		margin-bottom: 3%

.order-get
	flex(mid)

.confirm
	margin-bottom: 5%
