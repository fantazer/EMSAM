.footer
	+below(768px)
		padding: 20px
	margin-top: 5%
	f()
	justify-content: space-between
	padding: 5%

.footer-menu
	+below(768px)
		display: none
	f()
	fw()
	width: 50%

.footer-menu__el
	width: calc(100% / 3)
	margin-bottom: 15px
	a
		display: inline-block
		br-animate(#4d342c,1px)

.footer-info
	+below(768px)
		flex(mid)
		width: 100%
	f()
	fl()
	align-items: flex-end

.footer-info__name
	@extend .type--main
	font-weight 400
	margin-bottom: 20px

.footer-info__link
	@extend .type--main
	br-animate(#4d342c,1px)

.footer-info__logo
	+below(768px)
		margin: 20px 0
	margin-top: auto