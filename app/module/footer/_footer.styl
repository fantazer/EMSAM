.footer
	margin-top: 5%
	f()
	justify-content: space-between
	padding: 5%

.footer-menu
	f()
	fw()
	width: 50%

.footer-menu__el
	width: calc(100% / 3)
	margin-bottom: 15px
	a
		display: inline-block
		br-animate(#4d342c,1px)
.footer-info
	f()
	fl()
	align-items: flex-end

.footer-info__name
	@extend .type--main
	font-weight 400
	margin-bottom: 20px

.footer-info__link
	@extend .type--main
	br-animate(#4d342c,1px)

.footer-info__logo
	margin-top: auto