/*! block toolbar*/
.toolbar
	width: 95px
	height: 100%
	position: relative

.toolbar-wrap
	f()
	fl()
	position: fixed
	width: 95px
	height: 100%
	border-left:1px solid #e8d8d2

.toolbar-icon
	flex(mid)
	cp()
	padding: 27px
	border-bottom:1px solid #e8d8d2
	tr(all)
	&:hover
		background: $red
		.icon
			transform scale(0.9)
			fill white
	.icon
		tr(all)
		size 40px
		fill $gray-dark

.toolbar-enter
	@extend .toolbar-icon

.toolbar-cart
	@extend .toolbar-icon
	&:hover

		.toolbar-cart__val
			background: white
			color $red


.toolbar-cart__icon
	position: relative
	.cart-open
		display: none

.toolbar-cart.get-module--active
	background: $red
	.icon
		fill white
	.toolbar-cart__val
		background: white
		color red
	.cart-open
		display: block
	.cart-close
		display: none
//.icon
.toolbar-cart__val
	tr(all)
	br(10px)
	position: absolute
	top -5px
	right: -10px
	padding: 1px 5px
	background: $red
	color white
	font-size: 12px

.toolbar-call
	@extend .toolbar-icon
	margin-top: auto
	border-top:1px solid #e8d8d2
	background: $red
	.icon
		fill white

.toolbar-up
	@extend .toolbar-icon
	height: 0
	padding: 0
	.icon
		display: none
	tr(all)
.toolbar-up--show
	padding: 27px
	.icon
		display: block
	height: auto
	display: flex

/*!block toolbar end */